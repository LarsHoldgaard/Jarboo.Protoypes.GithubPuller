
@{
    ViewBag.Title = "Update Dependencies";
}

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("UpdateDependencies", "Project", FormMethod.Post, new { role = "form"}))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <input type="text" class="form-control" name="url" value="https://github.com/SaxoCom/Saxo.Dependencies.git" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="branch" value="develop" />
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary" style="margin-bottom: 20px;">Update Dependencies project</button>
                </div>
            </div>
        }
    </div>
</div>
