@model Jarboo.Protoypes.GithubPuller.Models.LoginViewModel
@section header {
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}
<div class="row">
    <div class="col-lg-6">
        <h2>Log på med din Jarboo Github Puller</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <p>@TempData["ErrorMessage"]</p>
            </div>
        }
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "", role = "form", id = "profileForm" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Kodeord" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary" style="margin-bottom: 20px;">Log ind</button>
                </div>
            </div>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        }
    </div>
</div>